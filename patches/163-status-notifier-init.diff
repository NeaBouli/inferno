+#!/usr/bin/env node
+/**
+ * Inferno Status Notifier
+ * Sends notifications to Discord + Email on repo events.
+ */
+
+import fs from "fs";
+import nodemailer from "nodemailer";
+import fetch from "node-fetch";
+
+// === CONFIG ===
+const DISCORD_WEBHOOK = process.env.DISCORD_WEBHOOK_URL;
+const EMAIL_TO = process.env.NOTIFY_EMAIL_TO;
+const EMAIL_FROM = process.env.NOTIFY_EMAIL_FROM || "inferno@system.local";
+const EMAIL_PASS = process.env.NOTIFY_EMAIL_PASS || "";
+
+const LATEST_LOG = fs.readFileSync("logs/project.log", "utf8").split("\n").slice(-5).join("\n");
+
+const message = `üî• Inferno Repo Update Detected
+
+**Timestamp:** ${new Date().toISOString()}
+**Event:** ${process.env.GITHUB_EVENT_NAME || "manual run"}
+
+\`\`\`
+${LATEST_LOG}
+\`\`\`
+`;
+
+// === Discord Notify ===
+async function notifyDiscord() {
+  if (!DISCORD_WEBHOOK) return console.warn("‚ö†Ô∏è  No Discord webhook set.");
+  await fetch(DISCORD_WEBHOOK, {
+    method: "POST",
+    headers: { "Content-Type": "application/json" },
+    body: JSON.stringify({ content: message }),
+  });
+  console.log("‚úÖ Sent Discord notification.");
+}
+
+// === Email Notify ===
+async function notifyEmail() {
+  if (!EMAIL_TO || !EMAIL_PASS) return console.warn("‚ö†Ô∏è  No email credentials set.");
+  const t = nodemailer.createTransport({
+    service: "gmail",
+    auth: { user: EMAIL_FROM, pass: EMAIL_PASS },
+  });
+  await t.sendMail({
+    from: EMAIL_FROM,
+    to: EMAIL_TO,
+    subject: "Inferno Repo Update",
+    text: message,
+  });
+  console.log("‚úÖ Sent Email notification.");
+}
+
+await Promise.all([notifyDiscord(), notifyEmail()]);
+
