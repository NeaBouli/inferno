+</footer>`;
+
+function injectFooter(file) {
+  const html = fs.readFileSync(file, "utf8");
+  if (!html.includes("<footer") && html.includes("</body>")) {
+    const newHtml = html.replace(/<\/body>/, `${footer}\n</body>`);
