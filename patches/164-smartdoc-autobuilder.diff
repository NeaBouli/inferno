+#!/usr/bin/env node
+/**
+ * Inferno SmartDoc Auto-Builder
+ * Parses Solidity NatSpec comments and creates Markdown docs.
+ */
+
+import fs from "fs";
+import path from "path";
+
+const SRC_DIR = "contracts";
+const OUT_DIR = "docs/contracts";
+
+if (!fs.existsSync(OUT_DIR)) fs.mkdirSync(OUT_DIR, { recursive: true });
+
+function extractNatSpec(content) {
+  const regex = /\/\*\*([\s\S]*?)\*\//g;
+  const matches = [...content.matchAll(regex)];
+  return matches
+    .map((m) => m[1]
+      .split("\n")
+      .map((l) => l.replace(/^\s*\*\s?/, ""))
+      .join("\n"))
+    .join("\n\n");
+}
+
+function convertToMarkdown(natspec, fileName) {
+  const titleMatch = natspec.match(/@title\s+(.*)/);
+  const noticeMatch = natspec.match(/@notice\s+(.*)/);
+
+  let md = `# ${titleMatch ? titleMatch[1] : fileName}\n\n`;
+  if (noticeMatch) md += `> ${noticeMatch[1]}\n\n`;
+
+  const lines = natspec.split("\n").filter((l) => !l.includes("@title") && !l.includes("@notice"));
+  md += lines.join("\n");
+
+  return md.trim();
+}
+
+function processFile(filePath) {
+  const content = fs.readFileSync(filePath, "utf8");
+  const natspec = extractNatSpec(content);
+  if (!natspec) return;
+
+  const fileName = path.basename(filePath, ".sol");
+  const md = convertToMarkdown(natspec, fileName);
+
+  fs.writeFileSync(path.join(OUT_DIR, `${fileName}.md`), md);
+  console.log(`ðŸ“˜ Generated docs for ${fileName}`);
+}
+
+function walk(dir) {
+  for (const f of fs.readdirSync(dir)) {
+    const full = path.join(dir, f);
+    if (fs.statSync(full).isDirectory()) walk(full);
+    else if (f.endsWith(".sol")) processFile(full);
+  }
+}
+
+walk(SRC_DIR);
+console.log("âœ… Smart Contract Docs generated in docs/contracts/");
