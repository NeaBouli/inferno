+#!/usr/bin/env node
+/**
+ * Inferno Docs Badge Updater
+ * Dynamically updates build/test/verify badges in README files.
+ */
+
+import fs from "fs";
+
+const BADGES = `
+[![Build](https://github.com/NeaBouli/inferno/actions/workflows/build.yml/badge.svg)](https://github.com/NeaBouli/inferno/actions/workflows/build.yml)
+[![Tests](https://github.com/NeaBouli/inferno/actions/workflows/test.yml/badge.svg)](https://github.com/NeaBouli/inferno/actions/workflows/test.yml)
+[![Verify](https://github.com/NeaBouli/inferno/actions/workflows/verify.yml/badge.svg)](https://github.com/NeaBouli/inferno/actions/workflows/verify.yml)
+`;
+
+function updateBadges(file) {
+  let content = fs.readFileSync(file, "utf8");
+  const regex = /<!-- BADGES_START -->[\s\S]*?<!-- BADGES_END -->/;
+  const newSection = `<!-- BADGES_START -->\n${BADGES}\n<!-- BADGES_END -->`;
+
+  if (regex.test(content)) {
+    content = content.replace(regex, newSection);
+  } else {
+    content = `${newSection}\n\n${content}`;
+  }
+
+  fs.writeFileSync(file, content);
+  console.log(`‚úÖ Badges updated in ${file}`);
+}
+
+updateBadges("README.md");
+updateBadges("docs/README.md");
+
+console.log("üèÅ All badges refreshed.");
+
