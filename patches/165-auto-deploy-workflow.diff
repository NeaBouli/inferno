+#!/usr/bin/env node
+/**
+ * Inferno Auto-Deploy Script
+ * Deploys core contracts (e.g. InfernoToken, BurnReserve, VestingSimple)
+ * using Hardhat runtime.
+ */
+
+import hre from "hardhat";
+
+async function main() {
+  console.log("🚀 Deploying Inferno core contracts...");
+
+  const [deployer] = await hre.ethers.getSigners();
+  console.log("👤 Deployer:", deployer.address);
+
+  const Inferno = await hre.ethers.getContractFactory("InfernoToken");
+  const inferno = await Inferno.deploy();
+  await inferno.deployed();
+
+  console.log(`🔥 InfernoToken deployed to: ${inferno.address}`);
+}
+
+main().catch((err) => {
+  console.error("❌ Deployment failed:", err);
+  process.exit(1);
+});
