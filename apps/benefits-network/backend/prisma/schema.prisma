generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Business {
  id              String    @id @default(cuid())
  name            String
  discountPercent Int
  requiredLockIFR Int
  ttlSeconds      Int       @default(60)
  tierLabel       String?
  active          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  sessions        Session[]
}

model Session {
  id               String     @id @default(cuid())
  businessId       String
  business         Business   @relation(fields: [businessId], references: [id])
  nonce            String     @unique
  expiresAt        DateTime
  status           String     @default("PENDING")
  recoveredAddress String?
  lockAmountRaw    String?
  reason           String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  redeemedAt       DateTime?
  attestAttempts   Int        @default(0)
  auditLogs        AuditLog[]

  @@index([businessId])
  @@index([status])
}

model AuditLog {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  type      String
  payload   String
  ts        DateTime @default(now())

  @@index([sessionId])
}
